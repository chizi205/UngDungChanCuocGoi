<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    tools:context=".TrangChu">

    <!-- Thanh tìm kiếm -->
    <EditText
        android:id="@+id/etSearch"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        android:hint="Tìm kiếm số điện thoại..."
        android:background="@drawable/bg_search"
        android:paddingStart="48dp"
        android:paddingEnd="16dp"
        android:inputType="phone"
        android:imeOptions="actionSearch"
        android:drawableStart="@android:drawable/ic_menu_search"
        android:drawablePadding="12dp"
        android:textColorHint="#888888"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Danh sách số bị chặn -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:padding="8dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/etSearch"
        app:layout_constraintBottom_toTopOf="@id/addLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Thanh thêm số -->
    <LinearLayout
        android:id="@+id/addLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:hint="Nhập số điện thoại"
            android:inputType="phone"
            android:background="@drawable/bg_edittext"
            android:padding="16dp"
            android:layout_marginEnd="12dp"
            android:textSize="16sp" />

        <!-- Dùng ImageButton thay FAB để không cần Material -->
        <ImageButton
            android:id="@+id/btnAdd"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@android:drawable/ic_menu_add"
            android:background="@drawable/bg_fab"
            android:contentDescription="Thêm số"
            android:scaleType="center"
            app:tint="#FFFFFF" />

    </LinearLayout>

    <!-- Thông báo khi danh sách trống -->
    <TextView
        android:id="@+id/tvEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chưa có số nào bị chặn\nNhấn nút + để thêm"
        android:textSize="18sp"
        android:textColor="#999999"
        android:gravity="center"
        android:visibility="gone"
        android:drawableTop="@android:drawable/ic_lock_lock"
    android:drawableTint="#999999"
    android:drawablePadding="16dp"
    app:layout_constraintTop_toTopOf="@id/recyclerView"
    app:layout_constraintBottom_toBottomOf="@id/recyclerView"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>